<resources>

    <style name="TextNumeroCuenta" parent="Theme.AppCompat">
        <item name="android:fontFamily">@font/helveticanowtextregular</item>
        <item name="android:gravity">left</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:textColor">@color/TEXT_COLOR_PRIMARY_VARIANT</item>
        <item name="android:textSize">@dimen/CAPTION1</item>
    </style>

    <style name="TextNombreCuenta" parent="Theme.AppCompat">
        <item name="android:fontFamily">@font/helveticanowtextregular</item>
        <item name="android:gravity">left</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:textColor">@color/TEXT_COLOR_PRIMARY</item>
        <item name="android:textSize">@dimen/BODY1</item>
    </style>

    <style name="TextViewOverLine2" parent="Theme.AppCompat">
        <item name="android:fontFamily">@font/helveticanowtextregular</item>
        <item name="android:gravity">start</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:textColor">@color/COLOR_SUCCESS_DARK</item>
        <item name="android:textSize">@dimen/OVERLINE2</item>
        <item name="android:textAllCaps">true</item>
    </style>
</resources>