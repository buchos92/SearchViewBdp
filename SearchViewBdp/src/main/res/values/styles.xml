<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="TextNumeroCuenta" parent="Theme.AppCompat">
        <item name="android:fontFamily">@font/helveticanowtextregular</item>
        <item name="android:gravity">left</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:textColor">@color/TEXT_COLOR_PRIMARY_VARIANT</item>
        <item name="android:textSize">@dimen/CAPTION1</item>
    </style>

    <style name="TextNombreCuenta" parent="Theme.AppCompat">
        <item name="android:fontFamily">@font/helveticanowtextregular</item>
        <item name="android:gravity">left</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:textColor">@color/TEXT_COLOR_PRIMARY</item>
        <item name="android:textSize">@dimen/BODY1</item>
    </style>

    <style name="TextViewOverLine2" parent="Theme.AppCompat">
        <item name="android:fontFamily">@font/helveticanowtextregular</item>
        <item name="android:gravity">start</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:textColor">@color/COLOR_SUCCESS_DARK</item>
        <item name="android:textSize">@dimen/OVERLINE2</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="BUTTON" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_secondary</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/BODY1</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/helveticanowtextregular</item>
        <item name="android:textColor">@color/text_color_secondary</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="TextSinMovimientos" parent="Theme.AppCompat">
        <item name="android:fontFamily">@font/helveticanowtextregular</item>
        <item name="android:gravity">left</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:textColor">@color/TEXT_COLOR_PRIMARY_VARIANT</item>
        <item name="android:textSize">@dimen/BODY2</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="TextResumenNonto" parent="Theme.AppCompat">
        <item name="android:fontFamily">@font/helveticanowtextbold</item>
        <item name="android:gravity">right</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:textColor">@color/TEXT_COLOR_PRIMARY</item>
        <item name="android:textSize">@dimen/BODY2</item>
    </style>
</resources>